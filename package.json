{
  "name": "checkwho",
  "version": "1.1.0",
  "description": "",
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "main": "build/backend/index.js",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "on-backend": "npm run --prefix services/backend",
    "on-frontend-govt": "npm run --prefix services/frontend-govt",
    "docker-dev": "docker-compose -f docker-compose.dev.yml up --build",
    "postinstall": "npm install --prefix services/backend && npm install --prefix services/frontend-govt",
    "lint": "npm run on-backend -- lint && npm run on-frontend-govt -- lint",
    "lint:fix": "npm run on-backend -- lint:fix && npm run on-frontend-govt -- lint:fix",
    "test": "npm run on-backend -- test && npm run on-frontend-govt -- test",
    "coverage": "npm run on-backend -- test:cov && cat backend/coverage/lcov.info > lcov.info",
    "cz": "git-cz",
    "start": "npm run on-backend -- start",
    "prepare": "husky install",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "auto-changelog": "^2.4.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.2",
    "turbo": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lint-staged": "^12.3.7"
  }
}
