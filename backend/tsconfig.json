{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "incremental": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~shared/*": ["../../shared/build/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
